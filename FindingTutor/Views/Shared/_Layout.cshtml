                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item active">
                        @{
                            if (Session["Teacher"] != null)
                            {
                                <a class="nav-link" href="@Url.Action("TutorManagement", "Tutor")">Trang chủ <span class="sr-only">(current)</span></a>
                            }
                            else if (Session["Admin"] != null)
                            {
                                <a class="nav-link" href="@Url.Action("Index", "Admin")">Trang chủ <span class="sr-only">(current)</span></a>
                            }
                            else
                            {
                                <a class="nav-link" href="@Url.Action("Index", "Home")">Trang chủ <span class="sr-only">(current)</span></a>
                            }
                        }
                    </li>

                    @{
                        if (Session["Teacher"] == null && Session["Admin"] == null)
                        {
                            <li class="nav-item active">
                                <a class="nav-link" href="~/Home/FindTutor">Tìm gia sư</a>
                            </li>
                        }
                    }
                    <li class="nav-item active">
                        <a class="nav-link" href="~/Home/About">Về chúng tôi</a>
                    </li>

                    <li class="nav-item active">

                        <a class="nav-link" href="tel:+84397067907"><img src="~/Content/Image/tel.png" style="width: 10%" />0397067907</a>
