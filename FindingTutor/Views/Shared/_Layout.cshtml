    <link rel="stylesheet" href="~/Content/css/Style.css" />
    <link rel="stylesheet" href="~/Content/css/bootstrap.css" />
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @{
                if (Session["Teacher"] != null)
                {
                    <a class="navbar-brand" href="@Url.Action("TutorManagement", "Tutor")"><img src="~/Content/Image/icon.png" width="90px" /></a>
                }
                else if (Session["Admin"] != null)
                {
                    <a class="navbar-brand" href="@Url.Action("Index", "Admin")"><img src="~/Content/Image/icon.png" width="90px" /></a>
                }
                else
                {
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/Content/Image/icon.png" width="90px" /></a>
