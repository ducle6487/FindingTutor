@for (int i = 1; i <= 6; i++)
{
    if (ViewBag.id.ToString() == i.ToString())
    {
        using (@Html.BeginForm("Message", "Home"))
        {
            <div style="height: 50px; width: 100%; background-color: chartreuse">

                <p align="center"><input name="chatlist" type="text" value="@i" readonly="readonly" style="background-color: transparent; border-color: transparent; height: 100%" /></p>

                <input type="submit" value="" style="height: 100%; width: 100%; align-self: center; margin-top: -50px; background-color: transparent" />
            </div>
        }
    }
    else
    {
        using (@Html.BeginForm("Message", "Home"))
        {
            <div style="height: 50px; width: 100%; background-color: antiquewhite">

                <p align="center"><input name="chatlist" type="text" value="@i" readonly="readonly" style="background-color: transparent; border-color: transparent; height: 100%" /></p>

                <input type="submit" value="" style="height: 100%; width: 100%; align-self: center; margin-top: -50px; background-color: transparent" />
            </div>
        }
    }

}

